{
  "name": "marzipano",
  "version": "0.10.2",
  "description": "A 360Â° media viewer for the modern web",
  "author": "Google Inc.",
  "license": "Apache-2.0",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./dist/marzipano.umd.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "homepage": "http://www.marzipano.net",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pixel-Process-UG/marzipano.git"
  },
  "bugs": {
    "url": "https://github.com/Pixel-Process-UG/marzipano/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "mkdir -p dist/types && cp -r src/*.d.ts src/*/*.d.ts dist/types/ 2>/dev/null || true",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"test/**/*.js\"",
    "dev:old": "scripts/dev",
    "test:old": "testem ci",
    "livetest:old": "testem",
    "release": "scripts/release",
    "deploy": "scripts/deploy",
    "prepublishOnly": "scripts/prepublish",
    "prepare": "husky"
  },
  "dependencies": {
    "bowser": "^2.11.0",
    "gl-matrix": "3.3.0",
    "hammerjs": "2.0.4",
    "minimal-event-emitter": "1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^20.19.24",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "browserify": "^17.0.0",
    "chai": "^5.1.0",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.5",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "lr-http-server": "^0.1.5",
    "mocha": "^10.7.0",
    "prettier": "^3.3.3",
    "sinon": "^19.0.0",
    "terser": "^5.44.1",
    "testem": "^3.2.0",
    "typescript": "^5.9.3",
    "uglify-js": "^3.12.3",
    "vite": "^5.4.11",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vitest": "^2.1.5",
    "watchify": "^3.11.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
